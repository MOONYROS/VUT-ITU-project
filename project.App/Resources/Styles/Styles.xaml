<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style x:Key="UserButtonStyle" TargetType="ImageButton">
        <Setter Property="BackgroundColor" Value="{StaticResource YlmNmBlue}" />
        <Setter Property="BorderColor" Value="{StaticResource OxfordBlue}" />
        <Setter Property="BorderWidth" Value="5" />
        <Setter Property="CornerRadius" Value="100" />
        <Setter Property="HeightRequest" Value="200" />
        <Setter Property="WidthRequest" Value="200" />
    </Style>

    <Style x:Key="GridRow" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="BorderColor" Value="{StaticResource OxfordBlue}" />
    </Style>

    <Style x:Key="FlyoutItem" TargetType="Button">
        <Setter Property="HeightRequest" Value="45" />
        <Setter Property="Margin" Value="10 5" />
    </Style>

</ResourceDictionary>
