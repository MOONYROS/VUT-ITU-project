<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase
    x:Class="project.App.Views.ActivitiesView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:project.BL.Models;assembly=project.BL"
    xmlns:viewmodels="clr-namespace:project.App.ViewModels"
    xmlns:views="clr-namespace:project.App.Views"
    Title="ActivitiesPage"
    BackgroundColor="{StaticResource SilverLakeBlue}"
    Shell.NavBarIsVisible="false"
    x:DataType="viewmodels:ActivitiesViewModel">

    <ScrollView Orientation="Horizontal">

        <Grid
            Padding="5"
            ColumnDefinitions="100,*,100"
            RowDefinitions="150,*">
            <Label
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                FontSize="48"
                HorizontalOptions="Center"
                Text="Activities"
                VerticalOptions="Center" />
            <VerticalStackLayout Spacing="2">
                <Button Text="Activities" 
                            Command="{Binding GoToActivitiesListCommand}"/>
                <Button Text="Project" />
                <Button Text="TODO" 
                            Command="{Binding GoToTodoListCommand}"/>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</views:ContentPageBase>
