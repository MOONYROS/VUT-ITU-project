<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="project.App.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:project.App.ViewModels"
    Title="Time scheduler"
    BackgroundColor="{StaticResource SilverLakeBlue}"
    Shell.NavBarIsVisible="false">
    <ContentPage.BindingContext>
        <viewmodels:MainViewModel />
    </ContentPage.BindingContext>
    <ScrollView>
        <Grid
            Padding="25,50"
            MinimumWidthRequest="400"
            RowDefinitions="100,200"
            VerticalOptions="Start">


            <Label
                Grid.Row="0"
                FontAttributes="Bold"
                FontSize="48"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level1"
                Text="Time scheduler" />

            <Button Grid.Row="1" Style="{StaticResource UserButtonStyle}" />
            <Image
                Grid.Row="1"
                HeightRequest="60"
                HorizontalOptions="Center">
                <Image.Source>
                    <FontImageSource
                        FontFamily="FASolid"
                        Glyph="{StaticResource User}"
                        Size="150"
                        Color="{StaticResource Platinum}" />
                </Image.Source>
            </Image>

        </Grid>
    </ScrollView>

</ContentPage>
