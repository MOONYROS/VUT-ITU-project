<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="project.App.Views.AddUserPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="AddUser"
    BackgroundColor="{StaticResource SilverLakeBlue}"
    Shell.NavBarIsVisible="false">

    <VerticalStackLayout Padding="25,50">
        <Label
            Padding="0,0,0,20"
            FontSize="48"
            HorizontalOptions="Center"
            Text="New User"
            VerticalOptions="Center" />

        <Label Padding="0,20,0,0" Text="FULLNAME" />
        <Entry />
        <Label Padding="0,20,0,0" Text="USERNAME" />
        <Entry />
        <Label Padding="0,20,0,0" Text="IMAGE" />
        <Entry />

        <Button
            Margin="0,20,0,0"
            BackgroundColor="{StaticResource YlmNmBlue}"
            BorderColor="{StaticResource OxfordBlue}"
            BorderWidth="3"
            FontAttributes="Bold"
            HeightRequest="100"
            Text="ADD"
            WidthRequest="100" />

    </VerticalStackLayout>
</ContentPage>